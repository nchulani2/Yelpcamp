<% include ../partials/header %> 

<div class="container">
    <%if(error && (error.length > 0)){%>
        <div class="my-2 alert alert-danger faster bounce"> <%-error%></div>
    <%}%>
</div>
    
<div id="buttonform" class="ui segment padded fluid animated bounceInRight delay-0s">
<h1 class="text-center">Edit Camp</h1>
    <form action="/campgrounds/<%=camp._id%>?_method=PUT" method="POST" class="needs-validation" novalidate>
        <div class="form-row">
            <div class="col-md-12 mb-2">
                <input type="text" class="form-control" id="validationCustom01" value="<%=camp.name%>" name="camp[name]" maxlength="40" required>
            </div>
            
        </div>
        <div class="form-row">
            <div class="col-md-12 mb-2">
                <input type="url" class="form-control" id="validationCustom02" aria-describedby="helpBlock" value="<%=camp.image%>"name="camp[image]" pattern="https?://.+" required>
                <small id="helpBlock" class="text-muted form-text">
                    ONLY http:// or https://
                </small>
            </div>

            
        </div>
         <div class="form-row">
            <div class="col-md-6 mb-2">
            <input class="form-control" id="validationCustom03" aria-describedby="helpBlock" type="number" value="<%=camp.price%>" name="camp[price]" min="0.01" max="500" step="0.01" required >
                <small id="helpBlock" class="form-text text-muted">
                    Please input a price from $0.01 to $500
                </small>
            </div>
            
            <div class="col-md-6 mb-2">     
                <input type="text" class="form-control" id="validationCustom04" aria-describedby="helpBlock" value="<%= camp.location %>" name="camp[location]" maxlength="50" required ></input>
                 <small id="helpBlock" class="form-text text-muted">
                    Please enter a location
                </small>
            
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-12 mb-2">
            
                <textarea rows="4" cols="4" type="text" class="form-control"  name="camp[description]" id="validationCustom05" maxlength="200" required ><%=camp.description%></textarea>
            
            </div>
        </div>
        <button class="mb-3 butt" type="submit">Submit</button>
        <a  class="ancers" style="display:inherit;" href="/campgrounds"><i class="arrow alternate circle left icon"></i>Go back</a>
    </form>
   
    
</div>


<% include ../partials/footer %> 