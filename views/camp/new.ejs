<% include ../partials/header %> 

<div class="container">
    <%if(error && (error.length >0)){%>
            <div class="my-2 alert alert-danger faster bounce"><%- error %></div>
    <%} %>
</div>
    
<div id="buttonform" class="ui segment padded fluid animated bounceInRight delay-0s">
<h1 class="text-center">Create Camp</h1>
    <form action="/campgrounds" method="POST" class="needs-validation" novalidate>
       <div class="form-row">
            <div class="col-md-12 mb-2">
                <input type="text" class="form-control" id="validationCustom01" placeholder="Name of Camp" name="camp[name]" maxlength="30" required>
            </div>  
        </div>
        <div class="form-row">
            <div class="col-md-12 mb-2">
                <input type="url" class="form-control" id="validationCustom02" aria-describedby="helpBlock" placeholder="Image source" name="camp[image]" pattern="https?://.+" title="Include http://" required>
                <small id="helpBlock" class="text-muted form-text">
                    Current allowed websites: <strong>Unsplash.com, Stocksnap.io, Pexels.com and Reshot.com</strong>
                </small>
                
            </div>
        </div>

         <div class="form-row">
          
            <div class="col-md-6 mb-2">
            <input class="form-control money" id="validationCustom03" aria-describedby="helpBlock" type="number" name="camp[price]" min="0.01" max="500" step="0.01" placeholder="Price (US$)" required >
                <small id="helpBlock" class="form-text text-muted">
                    Please input a price from $0.01 to $500
                </small>
            </div>
            <div class="col-md-6 mb-2">
            
                <input type="text" class="form-control" name="camp[location]" aria-describedby="helpBlock" id="validationCustom04" placeholder="Location (eg. Yosemite National Park, CA)" maxlength="50" required >
                    <small id="helpBlock" class="form-text text-muted">
                        Please enter a location
                    </small>
                </input>    
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-12 mb-2">
            
                <textarea rows="4" cols="15" type="text" class="form-control" name="camp[description]" id="validationCustom05" placeholder="Description" maxlength="200" required ></textarea>
            
            </div>
        </div>
        <button class="mb-3 butt" type="submit">Create</button>
        <a  class="ancers" style="display:inherit;" href="/campgrounds"><i class="arrow alternate circle left icon"></i>Go back</a>
    </form>
   
    
</div>
   



<% include ../partials/footer %> 

